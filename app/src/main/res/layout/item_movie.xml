<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:background="@drawable/bg_transparent_white_border"
        android:layout_marginTop="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:orientation="vertical"
        app:cardUseCompatPadding="true">

    <ImageView
            android:id="@+id/item_home_movie_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/no_image" />

    <TextView
            android:id="@+id/item_home_movie_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:maxLines="1"
            android:textColor="@color/header_text"
            app:autoSizeMaxTextSize="14sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toStartOf="@+id/item_home_movie_vote_txt"
            app:layout_constraintStart_toEndOf="@+id/item_home_movie_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="title of movie" />

    <TextView
            android:id="@+id/item_home_movie_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:maxLines="5"
            android:textColor="@color/basic_text"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_home_movie_image"
            app:layout_constraintTop_toBottomOf="@+id/item_home_movie_popularity_img"
            tools:text="description asdafjfgfusflgjnfdgdfgsdf" />

    <ImageView
            android:id="@+id/item_home_movie_vote_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/big_star_on"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/item_home_movie_vote_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:textColor="@color/basic_text"
            app:layout_constraintBaseline_toBaselineOf="@+id/item_home_movie_title"
            app:layout_constraintEnd_toStartOf="@+id/item_home_movie_vote_img"
            tools:text="1/3" />


    <ImageView
            android:id="@+id/item_home_movie_popularity_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/big_heart_on"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_home_movie_vote_img" />


    <TextView
            android:id="@+id/item_home_movie_popularity_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="4dp"
            android:textColor="@color/basic_text"
            app:layout_constraintEnd_toStartOf="@+id/item_home_movie_popularity_img"
            app:layout_constraintTop_toBottomOf="@+id/item_home_movie_vote_txt"
            tools:text="120" />


</androidx.constraintlayout.widget.ConstraintLayout>

