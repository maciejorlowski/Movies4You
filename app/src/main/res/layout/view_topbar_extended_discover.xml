<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/top_bar_extension_searcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:background="@drawable/bg">

    <Spinner
            android:id="@+id/top_bar_extended_discover_type_spinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:popupBackground="@color/light_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    <ImageView
            android:id="@+id/top_bar_extended_discover_filter"
            android:src="@drawable/filter_filter"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />

    <ImageView
            android:id="@+id/top_bar_extended_discover_sort"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:padding="10dp"
            android:src="@drawable/filter_sort"
            app:layout_constraintBottom_toBottomOf="@+id/top_bar_extended_discover_filter"
            app:layout_constraintEnd_toStartOf="@+id/top_bar_extended_discover_filter"
            app:layout_constraintTop_toTopOf="@+id/top_bar_extended_discover_filter" />

    <EditText
            android:id="@+id/top_bar_extended_discover_inputPrefix"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:hint="@string/search_enter_prefix_hint"
            android:backgroundTint="@color/white"
            android:textColor="@color/white"
            android:textColorHint="@color/light_gray"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/top_bar_extended_discover_type_spinner"
            app:layout_constraintEnd_toStartOf="@+id/top_bar_extended_discover_search"/>

    <ImageView
            android:id="@+id/top_bar_extended_discover_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/search"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/top_bar_extended_discover_sort"/>


</androidx.constraintlayout.widget.ConstraintLayout>