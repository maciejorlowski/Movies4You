<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/top_bar_extension_searcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        tools:background="@drawable/bg">

    <Spinner
            android:id="@+id/top_bar_extended_discover_type_spinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:popupBackground="@color/light_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    <ImageView
            android:id="@+id/top_bar_extended_discover_filter"
            android:src="@drawable/filter_filter"
            android:layout_width="21dp"
            android:layout_height="13dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="@id/top_bar_extended_discover_sort"
            app:layout_constraintBottom_toBottomOf="@id/top_bar_extended_discover_sort"
            app:layout_constraintStart_toEndOf="@+id/top_bar_extended_discover_type_spinner"
    />

    <ImageView
            android:id="@+id/top_bar_extended_discover_sort"
            android:src="@drawable/filter_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/top_bar_extended_discover_filter"/>

    <CheckBox
            android:id="@+id/top_bar_extended_discover_adult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18+"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/top_bar_extended_discover_search"/>

    <TextView
            android:id="@+id/top_bar_extended_discover_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search"
            android:textColor="@color/header_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>