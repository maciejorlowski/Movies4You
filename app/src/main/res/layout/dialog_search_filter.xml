<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <View
            android:id="@+id/dial_search_filter_backgroundShadow"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0"
            android:background="@color/black_half_shadowed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.drawerlayout.widget.DrawerLayout
                android:id="@+id/dial_search_filter_drawer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="35dp"
                android:layout_marginTop="80dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dial_search_filter_contentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginEnd="-65dp"
            android:background="@drawable/bg"
            android:padding="20dp">

        <TextView
                android:id="@+id/dial_search_filter_minYearLabel"
                style="@style/App.TextView.Medium.14.White"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="minYear"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <Spinner
                android:id="@+id/dial_search_filter_minYearSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@android:color/transparent"
                android:popupBackground="@color/light_gray"
                app:layout_constraintStart_toStartOf="@+id/dial_search_filter_minYearLabel"
                app:layout_constraintTop_toBottomOf="@+id/dial_search_filter_minYearLabel"
                tools:listitem="dadadsa" />

        <TextView
                android:id="@+id/dial_search_filter_maxYearLabel"
                style="@style/App.TextView.Medium.14.White"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="maxYear"
                app:layout_constraintBottom_toBottomOf="@+id/dial_search_filter_minYearLabel"
                app:layout_constraintStart_toStartOf="@+id/dial_search_filter_maxYearSpinner" />

        <Spinner
                android:id="@+id/dial_search_filter_maxYearSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@android:color/transparent"
                android:popupBackground="@color/light_gray"
                app:layout_constraintBottom_toBottomOf="@+id/dial_search_filter_minYearSpinner"
                app:layout_constraintStart_toEndOf="@+id/dial_search_filter_minYearSpinner"
                tools:listitem="dadadsa" />

        <Button
                android:id="@+id/dial_search_filter_showBtn"
                style="@style/button_open"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="PokaÅ¼"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.drawerlayout.widget.DrawerLayout>

</androidx.constraintlayout.widget.ConstraintLayout>